pipeline {
    agent any
    
    stages {
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/ShashithaU/CI-CD-Pipeline-Project.git'
                }
            } 
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t shashithaudesh/test-ci-cd-project:${BUILD_NUMBER} .'
            }
        } 
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'samin-docker', variable: 'samindocker')]) {
                    script {  
                        sh "docker login -u shashithaudesh  -p '${samindocker}'"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                sh "docker push shashithaudesh/test-ci-cd-project:${BUILD_NUMBER}"
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
